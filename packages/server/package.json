{
  "name": "@claude-anywhere/server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch --conditions source src/index.ts",
    "dev:no-reload": "tsx --conditions source src/index.ts",
    "dev:mock": "tsx --conditions source src/dev-mock.ts",
    "dev:real": "tsx --conditions source src/index.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:e2e": "vitest run test/e2e",
    "test:e2e:real": "REAL_SDK_TESTS=true vitest run test/e2e",
    "test:e2e:real:fg": "REAL_SDK_TESTS=true FOREGROUND=1 vitest run test/e2e"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.76",
    "@claude-anywhere/shared": "workspace:*",
    "@hono/node-server": "^1.13.7",
    "hono": "^4.6.14"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
