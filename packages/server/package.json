{
  "name": "@yep-anywhere/server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx --conditions source src/index.ts",
    "dev:watch": "tsx watch --conditions source src/index.ts",
    "dev:mock": "tsx --conditions source src/dev-mock.ts",
    "dev:real": "tsx --conditions source src/index.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:e2e": "vitest run test/e2e",
    "test:e2e:real": "REAL_SDK_TESTS=true vitest run test/e2e",
    "test:e2e:real:fg": "REAL_SDK_TESTS=true FOREGROUND=1 vitest run test/e2e"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.76",
    "@yep-anywhere/shared": "workspace:*",
    "@hono/node-server": "^1.13.7",
    "@hono/node-ws": "^1.2.0",
    "@openai/codex-sdk": "^0.77.0",
    "bcrypt": "^6.0.0",
    "hono": "^4.6.14",
    "http-proxy": "^1.18.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "web-push": "^3.6.7",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/http-proxy": "^1.17.17",
    "@types/node": "^22.10.2",
    "@types/web-push": "^3.6.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
