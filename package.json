{
  "name": "claude-anywhere",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:auto": "pnpm --filter server dev & pnpm --filter client dev",
    "dev-tailscale": "tailscale serve --bg 5555 && pnpm dev",
    "build": "pnpm -r build",
    "typecheck": "pnpm --filter shared build && pnpm -r exec tsc --noEmit",
    "test": "pnpm -r test",
    "test:e2e": "pnpm --filter client test:e2e",
    "lint": "biome check .",
    "format": "biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.1",
  "engines": {
    "node": ">=20"
  }
}
